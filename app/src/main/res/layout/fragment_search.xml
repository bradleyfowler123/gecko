<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp"
    tools:context="com.auton.bradley.myfe.SearchFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_welcome_textView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/search_top_message"
        android:textAlignment="center" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button"
        android:text="@string/search_button"
        style="@android:style/Widget.DeviceDefault.Button" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_welcome_textView"
        android:layout_above="@id/search_button"
        android:id="@+id/search_list">
    </ExpandableListView>

</RelativeLayout>

