<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/search_results_list_item"
    android:layout_height="120dp">



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sr_color"
        android:layout_margin="10dp"
        android:background="@drawable/homerectangle"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="190dp"
            android:id="@+id/sr_list_item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/friendFeed_imageDescription"
            app:srcCompat="@drawable/altontowers" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/sr_list_item_image"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:text="@string/test"
            android:id="@+id/sr_list_item_title"
            android:maxLines="2"
            android:textSize="20sp"
            android:gravity="bottom|start"
            android:textStyle="normal|bold" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/sr_add_to_calander" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/sr_add_to_calander"
            android:layout_below="@id/sr_list_item_title"
            android:layout_toEndOf="@id/sr_list_item_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:id="@+id/sr_list_item_location"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/test"
                android:textColor="@android:color/white"
                android:id="@+id/sr_list_item_price"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="top" />


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>