<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="2dp">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:id="@+id/profile_friend_list_item_profilePic"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/friendFeed_imageDescription"
        app:srcCompat="@drawable/com_facebook_button_icon_blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/profile_friend_list_item_profilePic"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Bradley Fowler"
            android:textSize="25sp"
            android:id="@+id/tv_profile_friends_name"
            android:gravity="center_vertical" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="is going go-karting tomorrow"
            android:id="@+id/tv_profile_friends_nextActivity" />

    </LinearLayout>

</RelativeLayout>