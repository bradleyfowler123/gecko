<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:id="@+id/profile_friend_list_item_profilePic"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/friendFeed_imageDescription"
        app:srcCompat="@drawable/com_facebook_button_icon_blue" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Bradley Fowler"
        android:textSize="25sp"
        android:id="@+id/tv_profile_friends_name"
        android:gravity="center_vertical|start" />



</LinearLayout>